              "items": {
                "bsonType": "string"
              },
              "description": "A 选项对应的特性"
            }
          }
        },
        "b": {
          "bsonType": "object",
          "properties": {
            "title": {
              "bsonType": "string",
              "description": "B 选项标题"
            },
            "value": {
              "bsonType": "array",
              "items": {
                "bsonType": "string"
              },
              "description": "B 选项对应的特性"
            }
          }
        }
